<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                    </div>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),class: "user") do |f| %>
                        <%= render "users/shared/error_messages", resource: resource %>
                        <div class="form-group">
                            <%= f.text_field :name,class:"form-control form-control-user",placeholder: "Enter Name" %>
                        </div>
                        <div class="form-group">
                             <em>(<%= f.label "Role" %>)<br /></em>
                            <%= f.select(:role_id, options_from_collection_for_select(@role, "id", "name"), {},{:class => "form-control form-control-user"}) %>
                        </div>
                        <div class="form-group">
                            <%= f.email_field :email, autofocus: true,class: "form-control form-control-user",placeholder: "Email Address", autocomplete: "email" %>
                        </div>
                        <div class="form-group row">
                              <% if @minimum_password_length %>
                              <em>(<%= @minimum_password_length %> characters minimum)</em>
                              <% end %><br />
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <%= f.password_field :password,class: "form-control form-control-user",placeholder: "Password", autocomplete: "new-password" %>
                            </div>
                            <div class="col-sm-6">
                                <%= f.password_field :password_confirmation,class: "form-control form-control-user",placeholder: "Repeat Password", autocomplete: "new-password" %>
                            </div>
                        </div>
                        <%= f.hidden_field :company_id, value: "1" %>
                        <%= f.submit "Register Account",class: "btn btn-primary btn-user btn-block" %>
                    <% end %>
                    <hr>
                    <%= render "users/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>
