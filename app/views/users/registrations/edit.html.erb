<div class="card o-hidden border-0 shadow-lg mx-auto  w-50">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Edit User!</h1>
                    </div>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put },class: "user") do |f| %>
                        <%= render "users/shared/error_messages", resource: resource %>
                        <div class="form-group">
                            <%= f.email_field :email, autofocus: true,class: "form-control form-control-user",placeholder: "Email Address", autocomplete: "email" %>
                        </div>
                        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                        <% end %>
                        <div class="form-group row">
                         <i>(leave blank if you don't want to change it)</i><br>
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <%= f.password_field :password,class: "form-control form-control-user",placeholder: "New Password", autocomplete: "new-password" %>
                            </div>
                            <div class="col-sm-6">
                                <%= f.password_field :password_confirmation,class: "form-control form-control-user",placeholder: "Repeat Password", autocomplete: "new-password" %>
                            </div>
                        </div>
                        <em>We need your current password to confirm your changes</em>
                        <div class="form-group">
                            <%= f.password_field :current_password,class: "form-control form-control-user",placeholder: "Current Password", autocomplete: "current-password" %> 
                        </div>
                        <%= f.submit "Update",class: "btn btn-primary btn-user btn-block" %>
                    <% end %>
                    <hr>
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Delete Account!</h1>
                    </div>
                    <p>Want to Delete Account Permanently?</p>
                    <div class="btn-toolbar">
                        <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger me-2" %>
                        <%= link_to "Back", :back, class:"btn btn-secondary" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
