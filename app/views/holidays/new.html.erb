<%= form_with model: @holiday do |form| %>
  <div>
    <%= form.label "Start Date" %><br>
    <%= form.text_field :start_date %>
  </div>

  <div>
    <%= form.label "End Date" %><br>
    <%= form.text_field :end_date %>
  </div>

  <div>
    <%= form.label "Name" %><br>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label "Description" %><br>
    <%= form.text_area :description %><br>
  </div>

  <div>
    <%= form.submit "Create Holiday" %>
  </div>
<% end %>
